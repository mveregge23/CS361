@model VirtualGarden.ViewModels.GardenViewModel
@{
    ViewBag.Title = "Garden";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="modal fade" id="planterModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModal-label">Planter Menu</h4>
            </div>
            <div class="modal-body">
                Plant Status
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>


<h2>@Model.Name</h2>
<h4>@Model.Location</h4>


<table>
    @{
        <tr>
            @for (var i = 0; i < 3; ++i)
            {
                <td>
                    @if (Model.Planters[i].Plant != null)
                    {
                        <a href="#" id="@Model.Planters[i].PlanterId" class="btn btn-primary planter" data-toggle="modal" data-target="#planterModal">Model.Planters[i].Plant.PlantType.Name</a>
                    }
                    else
                    {
                        <a href="#" id="@Model.Planters[i].PlanterId" class="btn btn-primary planter" data-toggle="modal" data-target="#planterModal">X</a>
                    }
                </td>
            }
        </tr>
        <tr>
            @for (var i = 3; i < 6; ++i)
            {
                <td>
                    @if (Model.Planters[i].Plant != null)
                    {
                        <a href="#" id="@Model.Planters[i].PlanterId" class="btn btn-primary planter" data-toggle="modal" data-target="#planterModal">Model.Planters[i].Plant.PlantType.Name</a>
                    }
                    else
                    {
                        <a href="#" id="@Model.Planters[i].PlanterId" class="btn btn-primary planter" data-toggle="modal" data-target="#planterModal">X</a>
                    }
                </td>
            }
        </tr>
        <tr>
            @for (var i = 6; i < 9; ++i)
            {
                <td>
                    @if (Model.Planters[i].Plant != null)
                    {
                        <a href="#" id="@Model.Planters[i].PlanterId" class="btn btn-primary planter" data-toggle="modal" data-target="#planterModal">Model.Planters[i].Plant.PlantType.Name</a>
                    }
                    else
                    {
                        <a href="#" id="@Model.Planters[i].PlanterId" class="btn btn-primary planter" data-toggle="modal" data-target="#planterModal">X</a>
                    }
                </td>
            }
        </tr>
    }
</table>

<script type="text/javascript">

    $(document).ready(function () {
        $(".planter").click(function () {
            var url = "../../api/Planter/" + this.getAttribute("id");

            $.get(url, function (data) {
                var buttons = data['Plant'] === null ? '<button class="btn btn-primary">Add Plant</button>' : '<button class="btn btn-danger">Remove</button><button class="btn btn-success">Water</button>'
                $(".modal-footer").html(buttons);
            });
        });
    });

</script>
