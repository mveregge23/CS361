@using System.Web.Script.Serialization
@model VirtualGarden.ViewModels.HomePageViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Virtual Garden</h1>
    <p class="lead">Create and care for your own virtual garden.</p>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Create a Garden</h2>
        @using (Html.BeginForm("Create", "Garden"))
        { 
            <p>All fields are required.</p>
            <div class="form-group">
                @Html.LabelFor(m => m.GardenFormViewModel.Name)
                @Html.TextBoxFor(m => m.GardenFormViewModel.Name, new { @class = "form-control", autofocus = "autofocus" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.GardenFormViewModel.Location)
                @Html.DropDownListFor(m => m.GardenFormViewModel.Location, new SelectList(Model.GardenFormViewModel.Locations, "Id", "Name"), "", new {@class = "form-control" })
            </div>
            <button type="submit" class="btn btn-primary btn-lg">Create</button>
        }
    </div>
    <div class="col-md-6">
        <h2>Open a Garden</h2>
        <p>Enter the name of the garden to open it.</p>
        @using (Html.BeginForm("Visit", "Garden"))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.VisitGardenViewModel.Name)
                @Html.TextBoxFor(m => m.VisitGardenViewModel.Name, new { @class = "form-control", autofocus = "autofocus" })
            </div>
            <button type="submit" class="btn btn-primary btn-lg">Go</button>
        }
    </div>
</div>